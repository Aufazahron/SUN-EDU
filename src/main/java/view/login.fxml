            <VBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="40.0" prefWidth="320.0" spacing="12.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>

               <children>
                  <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Selamat Datang" />

                  <Label style="-fx-font-weight: bold; -fx-padding: 16 0 0 0;" text="Username" />
