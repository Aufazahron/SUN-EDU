                  <Label style="-fx-font-weight: bold;" text="Password" />
                  <PasswordField fx:id="passwordField" prefWidth="300.0" promptText="Masukkan password" style="-fx-background-radius: 32; -fx-padding: 10; -fx-font-weight: 800; -fx-background-color: ffffff; -fx-font-style: 0000;" />
               </children>
            </VBox>

                  <Button fx:id="loginButton" layoutX="30.0" layoutY="295.0" onAction="#handleLogin" prefWidth="300.0" style="-fx-background-color: #495bab; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 32; -fx-padding: 10 0 10 0;" text="Login" />
                  
                  <Button fx:id="registerButton" layoutX="30.0" layoutY="340.0" onAction="#handleRegister" prefWidth="300.0" style="-fx-background-color: transparent; -fx-text-fill: #495bab; -fx-font-weight: bold; -fx-background-radius: 32; -fx-padding: 10 0 10 0;" text="Belum punya akun? Daftar" />
         </children>
      </Pane>
   </children>
</AnchorPane>
